<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_backend" name="Openworx Backend Theme" inherit_id="web.assets_backend">
        <xpath expr=".">
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/style.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/sidebar.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/boostrap.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/navbar.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/form_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/form_view_extra.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/list_view.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/fields_extra.scss"/>
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/webclient_extra.scss"/>
            <script type="application/javascript" src="/backend_theme_v12/static/src/js/sidebar.js"/>
            <script type="application/javascript" src="/backend_theme_v12/static/src/js/sidebar-toggle.js"/>
        </xpath>
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/backend_theme_v12/static/src/scss/layout.scss"/>
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/backend_theme_v12/static/src/js/views/form_renderer.js" />
        </xpath>
    </template>

</odoo>
